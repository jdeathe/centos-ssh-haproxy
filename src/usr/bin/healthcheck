#!/usr/bin/env bash

if [[ ! -f /usr/sbin/rsyslogd ]] \
	&& [[ -f /sbin/rsyslogd ]]
then
	readonly RSYSLOGD=/sbin/rsyslogd
else
	readonly RSYSLOGD=/usr/sbin/rsyslogd
fi

function has_nbproc_running ()
{
	local nbproc="$(
		sed -rn \
			-e 's~.*nbproc ([0-9]+).*~\1~p' \
			/etc/haproxy/haproxy.cfg
	)"
	local nbproc_running="$(
		ps axo command \
		| grep -cE '^/usr/sbin/haproxy '
	)"

	# Account for the Master process
	(( nbproc_running -= 1 ))

	if [[ ${nbproc_running} -lt ${nbproc} ]]; then
		return 1
	fi

	return 0
}

# logging
if ! ps axo command \
	| grep -qE "^${RSYSLOGD} "
then
	exit 1
fi

# child processes
if ! ps axo command \
	| grep -qE '^/usr/sbin/haproxy '
then
	exit 1
fi

if ! has_nbproc_running; then
	exit 1
fi

exit 0
